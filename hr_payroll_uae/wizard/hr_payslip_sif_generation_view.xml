<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_payslip_sif_generation_wizard_view_form" model="ir.ui.view">
            <field name="name">hr.payslip.sif.generation.wizard.form</field>
            <field name="model">hr.payslip.sif.generation.wizard</field>
            <field name="arch" type="xml">
                <form string="SIF Generation">
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div class="oe_title">
                            <h1>SIF Generation</h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_bank_account_id"/>
                                <field name="summary" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Generate SIF' name="expense_post_payment" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Expenses -->
        <record id="hr_payslip_sif_generation_wizard_action" model="ir.actions.act_window">
            <field name="name">SIF Generation</field>
            <field name="res_model">hr.payslip.sif.generation.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_payslip_sif_generation_wizard_view_form"/>
            <field name="target">new</field>
        </record>

</odoo>